#------------------------------------------------#
# Basic settings
#------------------------------------------------#

# Set modifier
set $mod Mod1
set $win Mod4

# Set floating modifier
floating_modifier $mod

# Navigations keys
set $left h
set $down j
set $up k
set $right l

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Resize key
#bindsym $mod+r mode "resize"

#------------------------------------------------#
# Font and colors
#------------------------------------------------#

# Font
font pango:xos4Terminus 12

# Colors for clients
client.focused #255662 #255662 #C0C0C0 #255662
client.focused_inactive #073642 #073642 #839496 #073642
client.unfocused #073642 #073642 #839496 #292d2e
client.urgent #2f343a #A83838 #ffffff #A83838

#------------------------------------------------#
# Mouse settings
#------------------------------------------------#

# Mouse warping
# By default, when switching focus to a client on a different output (e.g. focusing a client on workspace 3 on output VGA-1, coming from workspace 2 on LVDS-1), the mouse cursor is warped to the center of that client.
mouse_warping output
#mouse_warping none

# If focus should follow your mouse movements
focus_follows_mouse no

#------------------------------------------------#
# Client rules
#------------------------------------------------#

# Focus on client activation
# If a client is activated, e.g., via google-chrome www.google.com, it may request to take focus. Since this may not preferable, different reactions can be configured.
# Options: smart | urgent | focus | none
focus_on_window_activation urgent

# Border style for new clients
# Syntax: normal | none | pixel | pixel <px>
#new_window pixel 3
#new_float pixel 3
#new_window pixel normal
#new_float pixel normal

# Toggle border (all)
bindsym Control+$mod+t [class="^.*"] border toggle

# Toggle border
bindsym $mod+t border toggle
bindsym $mod+y border pixel 3
 
# Kill focused client
bindsym $mod+Shift+q kill

# Change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
 
# Move focused client
bindsym Mod1+Shift+$left move left
bindsym Mod1+Shift+$down move down
bindsym Mod1+Shift+$up move up
bindsym Mod1+Shift+$right move right

# Swap clients
bindsym $mod+Shift+m mark alpha
bindsym $mod+Shift+u [class=.] unmark
bindsym $mod+Shift+Tab swap container with mark alpha, [class=.] unmark

# resize clients
mode "resize" {
	bindsym $left resize shrink width 5 px or 5 ppt
	bindsym $down resize grow height 5 px or 5 ppt
	bindsym $up resize shrink height 5 px or 5 ppt
	bindsym $right resize grow width 5 px or 5 ppt

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+Ctrl+$left resize grow width 5 px or 5 ppt
bindsym $mod+Ctrl+$down resize grow height 5 px or 5 ppt
bindsym $mod+Ctrl+$up resize shrink height 5 px or 5 ppt
bindsym $mod+Ctrl+$right resize shrink width 5 px or 5 ppt

# Split in horizontal orientation
bindsym $mod+c split h

# Split in vertical orientation
bindsym $mod+v split v

# Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# Enter fullscreen mode for the focused container across all monitors
bindsym $mod+shift+f fullscreen toggle global

# change container layout (stacked, tabbed, toggle split)
#bindsym Mod1+s layout stacking
bindsym $mod+w layout tabbed
bindsym Mod1+e layout toggle split

# focus the parent container
bindsym $mod+q focus parent

# toggle tiling / floating
bindsym $mod+shift+space floating toggle

# change focus between tiling / floating clients
bindsym $mod+space focus mode_toggle

# Go to latest urgent client
bindsym $mod+shift+a [urgent=latest] focus

#------------------------------------------------#
# Application rules
#------------------------------------------------#

# Workspaces
assign [class="Gimp"] 7
assign [class="MultiMC5"] 4
assign [class="Minecraft*"] 4
# Fullscreen
for_window [class="Minecraft*"] fullscreen
for_window [class="mpv" instance="fs3"] border none
# No window decoration
for_window [class="Spotify"] border none

#------------------------------------------------#
# Workspace rules
#------------------------------------------------#

# Go to previous workspace
bindsym $mod+Tab workspace back_and_forth

# Move workspace to other monitor
bindsym $mod+shift+comma move workspace to output right
bindsym $mod+shift+period move workspace to output left

# Go to next/previus workspace
bindsym $win+j workspace next
bindsym $win+k workspace prev

# Spawn workspaces in specific order
workspace 1 output DVI-I-1
workspace 2 output DVI-D-0
workspace 3 output HDMI-0
workspace 4 output DVI-I-1
workspace 9 output HDMI-0

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10


#------------------------------------------------#
# Programs
#------------------------------------------------#

# Autostart
exec --no-startup-id sleep 2 && $HOME/.i3/autostart.sh

# Start a terminal
bindsym $mod+Return exec urxvtc

# rofi
bindsym $mod+p exec rofi -m -0 -bw 3 -show run -display-run "Run" -font "xos4Terminus 12"
bindsym $mod+shift+w exec rofi -m 0 -bw 3 -show window -display-run "Window" -font "xos4Terminus 12"
bindsym $mod+shift+p exec "sh $HOME/Scripts/rofi-scripts.sh"
#bindsym $mod+u exec buku_run -m -4 -font "xos4Terminus 12"

# Open empty container
bindsym $mod+shift+o exec i3-msg open ; exec i3-msg border toggle

# Take screenshot
bindsym Print exec --no-startup-id "scrot && notify-send 'Screenshot captured!' 'Image saved in your home directory'"

# Volume (ALSA)
#bindsym $mod+plus exec "amixer set Master Front 2+"
#bindsym $mod+minus exec "amixer set Master Front 2-"
#bindsym Ctrl+$mod+m exec "amixer set Master toggle"
#bindsym $mod+plus exec "volume.sh up"
#bindsym $mod+minus exec "volume.sh down"
#bindsym $mod+Ctrl+m exec "volume.sh mute"
# Volume (PulseAudio)
bindsym $mod+plus exec "volume-pa.sh up"
bindsym $mod+minus exec "volume-pa.sh down"
bindsym $mod+Ctrl+m exec "volume-pa.sh mute"

# i3lock
bindsym Ctrl+$mod+Delete exec "i3lock -i $HOME/.i3/lockscreen.png --tiling --no-unlock-indicator"

# Restore wallaper
#bindsym $mod+Shift+w exec "sh ~/.fehbg"

# Random wallaper with feh
#bindsym $mod+Shift+w exec "feh --randomize --bg-fill /media/HDD0/Pictures/Wallpapers/Unsplash/"

# Suspend
bindsym Ctrl+$mod+Break exec "systemctl suspend"
#bindsym Ctrl+$mod+Break exec "sudo pm-suspend"

# Music player
bindsym XF86AudioPlay exec "cmus-remote -u"
bindsym XF86AudioNext exec "cmus-remote -n"
bindsym XF86AudioPrev exec "cmus-remote -r"

#------------------------------------------------#
# i3-gaps
#------------------------------------------------#

# gaps
gaps inner 5
gaps outer 1

# For gaps to work we need to disable titles
for_window [class="^.*"] border pixel 3

# Only show gaps if two or more containers
smart_gaps on

# Only show borders if two or more containers
smart_borders on

bindsym $mod+Shift+plus gaps inner all plus 5
bindsym $mod+Shift+minus gaps inner all minus 5

#------------------------------------------------#
# i3-bar
#------------------------------------------------#

# Toggle bar(s)
bindsym $mod+b bar mode toggle

# Middle monitor
bar {
  output DVI-I-1
	status_command $HOME/.i3/conky/1.sh
    tray_output none
	position top
	font pango:xos4Terminus 12
	mode dock
  colors {
    separator #666666
    background #000000
    statusline #839496
    focused_workspace #4c7899 #285577 #C0C0C0
    active_workspace #727272 #4F4F4F #C0C0C0
    inactive_workspace #333333 #222222 #C0C0C0
    urgent_workspace #BC5959 #A83838 #FFFFFF
  }
}

# Left monitor
bar {
  output DVI-D-0
	status_command $HOME/.i3/conky/2.sh
	tray_output none
	position top
	font pango:xos4Terminus 12
